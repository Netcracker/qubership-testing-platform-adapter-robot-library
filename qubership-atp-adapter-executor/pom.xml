    <profiles>
        <profile>
            <id>run-integration-tests</id>
            <activation>
                <activeByDefault>false</activeByDefault>
                <property>
                    <name>ui-tests</name>
                    <value>true</value>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>
                        <version>2.20.1</version>
                        <executions>
                            <!-- execute all integration (mostly UI tests) -->
                            <execution>
                                <phase>integration-test</phase>
                                <goals>
                                    <goal>integration-test</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>verify</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>verify</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <additionalClasspathElements>
                                <additionalClasspathElement>${basedir}/target/test-basedir/config/
                                </additionalClasspathElement>
                            </additionalClasspathElements>
                            <systemPropertyVariables>
                                <webdriver.capabilities.screenResolution>${webdriver.capabilities.screenResolution}
                                </webdriver.capabilities.screenResolution>
                                <webdriver.hub.url>${webdriver.hub.url}</webdriver.hub.url>
                                <capabilities.enableVNC>${capabilities.enableVNC}</capabilities.enableVNC>
                            </systemPropertyVariables>
                            <argLine>${tests.argLine}</argLine>
                            <!-- required to make sure tests are dead if tests JVM is killed-->
                            <shutdown>kill</shutdown>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
